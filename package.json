    "@angular/material": "^20.2.8",
    "@angular/platform-browser": "^20.3.4",
    "@angular/router": "^20.3.4",
    "@tailwindcss/postcss": "^4.1.11",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.13",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.5",
