{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "paths": {
      "#core/*": ["src/app/core/*"],
      "#ui/*": ["src/app/ui/*"],
      "#template/*": ["src/app/feature/template/*"],
      "#web3/*": ["src/app/feature/web3/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.spec.json" },
    { "path": "./projects/web3/tsconfig.app.json" },
    { "path": "./projects/web3/tsconfig.spec.json" },
    { "path": "./projects/template/tsconfig.app.json" },
    { "path": "./projects/template/tsconfig.spec.json" }
  ]
}
